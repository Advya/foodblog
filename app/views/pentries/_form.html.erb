<%= form_with(model: pentry) do |form| %>
  <% if pentry.errors.any? %>
    <div id="error_explanation" class="message is-danger">
      <div class="mesaage-header">
        <h2><%= pluralize(pentry.errors.count, "error") %> prohibited this pentry from being saved:</h2>
      </div>
      <div class="message-body">
        <ul>
          <% pentry.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :meal_type, class: "label" %>
    <%= form.text_field :meal_type, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :calories, class: "label" %>
    <%= form.number_field :calories, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :proteins, class: "label" %>
    <%= form.number_field :proteins, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :category_id, class: "label" %>
    <div class="select">
      <%= form.select :category_id, Category.all.collect {|u| [u.title, u.id]} %>
    </div>
  </div>

  <div class="field">
    <%= form.label :carbohydrates, class: "label" %>
    <%= form.number_field :carbohydrates, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :fats, class: "label" %>
    <%= form.number_field :fats, class: "input" %>
  </div>

  <div class="actions">
    <%= form.submit class: "button is-success" %>
  </div>
<% end %>
