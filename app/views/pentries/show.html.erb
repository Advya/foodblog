<% content_for :title do %>
  <%= @pentry.meal_type %> <%= DateTime.now.to_s(:nice_date) %>
<% end %>

<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-link">
      <p class="panel-heading">      
        <%= @pentry.meal_type %>
        (<%= @pentry.category.title %>)
      </p>
      <p class="panel-block">  
        Calories: <%= @pentry.calories %>
      </p>

        <p class="panel-block">
         Proteins: <%= @pentry.proteins %>
       </p>

        <p class="panel-block">
          Carbohydrates: <%= @pentry.carbohydrates %>
        </p>  

        <p class="panel-block">
          Fats: <%= @pentry.fats %>
        </p>
       </nav>

       <div class="columns is-mobile">
        <div class="column">
          <%= link_to 'Edit', edit_pentry_path(@pentry), class: "button is-gray" %> 
           <%= link_to 'Delete', pentry_path(@pentry), method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-gray" %>
          </div>
          <div class="column">
            <!--  -->
          </div>
       </div>
  </div>
</div>